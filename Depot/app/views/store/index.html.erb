<% if flash[:notice] %>
	<p id="notice"><%= flash[:notice] %></p> 
<% end %>

	<div id="headersession">
		<h1><%= t('body.title') %></h1>
<!--		<% if session[:counter] > 5 %>
			<p class="countersession"><%= @counter %></p>
		<% end %>  -->	
	</div>
	
      <% @products.each do |product| %>
        <div class="entry">
        	<%= link_to  image_tag(product.image_url), line_items_path(:product_id => product), :method => :post, :remote => true %>  
			<h3><%= product.title %></h3> 
			<%=sanitize product.description %> 
			<div class="price_line">
				<span class="price"><%= number_to_currency(product.price) %></span>

				<%= button_to t('body.cart-button'), line_items_path(:product_id => product), :remote => true %>
			</div>

		</div>		
      <% end %> 